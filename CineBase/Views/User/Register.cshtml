@model UserViewModel
@{
    ViewData["Title"] = "Registrace";
}

<h2>Registrace</h2>
<div class="form-group">
    <div class="row">
        <span class="col-xs-5 col-sm-4 col-md-2">@Html.LabelFor(x => x.Username)</span>
        <span class="col-xs-4 col-sm-4 col-md-2">@Html.EditorFor(x => x.Username)</span>
    </div>
    <div class="row">
        <span class="col-xs-5 col-sm-4 col-md-2">@Html.LabelFor(x => x.Password)</span>
        <span class="col-xs-4 col-sm-4 col-md-2">@Html.EditorFor(x => x.Password)</span>
    </div>
    <div class="row">
        <span class="col-xs-5 col-sm-4 col-md-2">@Html.LabelFor(x => x.Email)</span>
        <span class="col-xs-4 col-sm-4 col-md-2"> @Html.EditorFor(x => x.Email)</span>
    </div>
</div>