@model PersonViewModel

<div id="add-form" class="panel panel-default view-area">
    @Html.HiddenFor(x => x.Id)
    <div class="col-lg-12 col-md-12 col-xs-12">
        <h2>Upravit osobnost</h2>
        <div class="row">
            <div class="form-area">
                <div class="row">
                    <span class="col-md-2 control-label">@Html.LabelFor(x => x.Firstname)</span>
                    @Html.EditorFor(x => x.Firstname)
                    @Html.ValidationMessageFor(x => x.Firstname)
                </div>
                <div class="row">
                    <span class="col-md-2 control-label">@Html.LabelFor(x => x.Lastname)</span>
                    @Html.EditorFor(x => x.Lastname)
                    @Html.ValidationMessageFor(x => x.Lastname)
                </div>
                <div class="row">
                    <span class="col-md-2 control-label">@Html.LabelFor(x => x.Birthdate)</span>
                    @Html.EditorFor(x => x.Birthdate)
                    @Html.ValidationMessageFor(x => x.Birthdate)
                </div>
                <div class="row">
                    <span class="col-md-2 control-label">@Html.LabelFor(x => x.Deathdate)</span>
                    @Html.EditorFor(x => x.Deathdate)
                    @Html.ValidationMessageFor(x => x.Deathdate)
                </div>
                <div class="row">
                    <span class="col-md-2 control-label">@Html.LabelFor(x => x.Birthplace)</span>
                    @Html.EditorFor(x => x.Birthplace)
                    @Html.ValidationMessageFor(x => x.Birthplace)
                </div>
                <div class="row">
                    <span class="col-md-2 control-label">@Html.LabelFor(x => x.Bio)</span>
                    @Html.EditorFor(x => x.Bio)
                    @Html.ValidationMessageFor(x => x.Bio)
                </div>
            </div>
        </div>
        <div class="row">
            <button class="btn btn-success" onclick="addPerson()">Upravit</button>
        </div>
    </div>
</div>

<script>
    function addPerson() {
        var model = {
            id: @Model.Id,
            firstname: $("#Firstname").val(),
            lastname: $("#Lastname").val(),
            birthdate: $("#Birthdate").val(),
            deathdate: $("#Deathdate").val(),
            birthplace: $("#Birthplace").val(),
            bio: $("#Bio").val(),
        };
        $.post("/People/_Edit", model);
        location.replace("/People");
    }
</script>
