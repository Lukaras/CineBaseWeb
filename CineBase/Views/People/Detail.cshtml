@model PersonViewModel

<div class="col-xs-12">
    <h2>@Html.Raw(Model.Firstname)&nbsp;@Html.Raw(Model.Lastname)&nbsp;<button class="btn-sm btn-info" id="edit" onclick="location.replace('/People/Edit/@Model.Id')" style="display:none">Upravit</button></h2>
    <div class="row col-xs-12">
        <div class="row">
            <span class="col-md-2 control-label">@Html.LabelFor(x => x.Birthdate)</span>
            @Html.DisplayFor(x => x.Birthdate)
            @Html.ValidationMessageFor(x => x.Birthdate)
        </div>
        <div class="row">
            <span class="col-md-2 control-label">@Html.LabelFor(x => x.Deathdate)</span>
            @Html.DisplayFor(x => x.Deathdate)
            @Html.ValidationMessageFor(x => x.Deathdate)
        </div>
        <div class="row">
            <span class="col-md-2 control-label">@Html.LabelFor(x => x.Birthplace)</span>
            @Html.DisplayFor(x => x.Birthplace)
            @Html.ValidationMessageFor(x => x.Birthplace)
        </div>
        <div class="row">
            <span class="col-md-2 control-label">@Html.LabelFor(x => x.Bio)</span>
            @Html.DisplayFor(x => x.Bio)
            @Html.ValidationMessageFor(x => x.Bio)
        </div>
        <div class="row col-xs-12">
            <h4>Filmografie</h4>
            <div class="col-xs-12">
                <div class="row">
                    @Html.LabelFor(x => x.DetailActors)
                    @foreach (MovieViewModel m in Model.DetailActors)
                    {
                        <div class="row col-xs-12">
                            <a href="/Movies/Detail/@m.Id">@m.Title</a>
                        </div>
                    }
                    <hr />
                </div>
                <div class="row">
                    @Html.LabelFor(x => x.DetailOverheadMovies)
                    @foreach (MovieViewModel m in Model.DetailOverheadMovies)
                    {
                        <div class="row col-xs-12">
                            <a href="/Movies/Detail/@m.Id">@m.Title</a>
                        </div>
                    }
                    <hr />
                </div>
                <div class="row">
                    @Html.LabelFor(x => x.DetailModelMovies)
                    @foreach (MovieViewModel m in Model.DetailModelMovies)
                    {
                        <div class="row col-xs-12">
                            <a href="/Movies/Detail/@m.Id">@m.Title</a>
                        </div>
                    }
                    <hr />
                </div>
                <div class="row">
                    @Html.LabelFor(x => x.DetailCameraMovies)
                    @foreach (MovieViewModel m in Model.DetailCameraMovies)
                    {
                        <div class="row col-xs-12">
                            <a href="/Movies/Detail/@m.Id">@m.Title</a>
                        </div>
                    }
                    <hr />
                </div>
                <div class="row">
                    @Html.LabelFor(x => x.DetailScreenplayMovies)
                    @foreach (MovieViewModel m in Model.DetailScreenplayMovies)
                    {
                        <div class="row col-xs-12">
                            <a href="/Movies/Detail/@m.Id">@m.Title</a>
                        </div>
                    }
                    <hr />
                </div>
                <div class="row">
                    @Html.LabelFor(x => x.DetailSoundMovies)
                    @foreach (MovieViewModel m in Model.DetailSoundMovies)
                    {
                        <div class="row col-xs-12">
                            <a href="/Movies/Detail/@m.Id">@m.Title</a>
                        </div>
                    }
                    <hr />
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    window.addEventListener('load', (event) => {
        if (parseInt(getCookie("userType")) > 0) {
            $("#edit").show();
        }
    });
</script>
